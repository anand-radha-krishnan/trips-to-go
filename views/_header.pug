header.header
    nav.nav.nav--trips
        a.nav__el(href='/') All trips
    .header__logo
        img(src='/img/logo-white.png' alt='Trips to go logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.image}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]

        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign Up
